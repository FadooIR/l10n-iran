<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_view_employee_form_inherit_l10n_ir_hr_payroll" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.l10n_ir_hr_payroll</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <field name="country_id" position="before">
                    <field name="l10n_ir_first_name" />
                    <field name="l10n_ir_last_name" />
                    <field name="l10n_ir_father_name" />
            </field>

            <field name="identification_id" position="after">
                    <field name="l10n_ir_national_id" />
            </field>

            <field name="user_id" position="before">
                    <field
                    name="l10n_ir_contract_end_date"
                    attrs="{'invisible' : [('l10n_ir_contract_end_date', '=', False)]}"
                />
            </field>


            <group name="identification_group" position="after">
                <group string="Insurance" name="insurance_group">
                    <field name="l10n_ir_insured" />
                    <field
                        name="l10n_ir_insurance_id"
                        attrs="{'invisible': [('l10n_ir_insured', '=', False)], 'required': [('l10n_ir_insured', '=', True)]}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
