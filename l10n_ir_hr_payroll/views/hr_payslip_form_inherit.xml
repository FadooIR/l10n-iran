<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_hr_payslip_inherit_form">
        <field name="name">hr.payslip.inherit.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="payroll.hr_payslip_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="attributes">
                    <attribute name="decoration-danger">total &lt; 0</attribute>
                    <attribute name="decoration-bf">code in ('GROSS', 'NET')</attribute>
                    <attribute name="decoration-success">code == 'NET'</attribute>
            </xpath>
        </field>
    </record>
</odoo>
