<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Settings For Twilio APIs-->
        <record
            id="res_config_settings_view_form_inherit_for_twilio"
            model="ir.ui.view"
        >
            <field name="name">res.config.settings.view.form.inherit.for.twilio</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='multi_company']" position="after">
                    <h2 class="mt32">تنظیمات پیامک</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">شماره خط </span>
                                <div>
                                    <field name="sms_line_number" class="oe_inline" />
                                </div>
                                <span class="o_form_label">UserApiKey</span>
                                <div>
                                    <field name="sms_user_api_key" class="oe_inline" />
                                </div>
                                <span class="o_form_label">SecretKey</span>
                                <div>
                                    <field name="sms_secret_key" class="oe_inline" />
                                </div>
                                <br />
                                <span class="o_form_label">بازنویسی ارسال پیامک</span>
                                <field
                                    name="twilio_overwrite_odoo_sms"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
